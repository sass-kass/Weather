<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_icon"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:padding="10dp"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/calibrib"
        android:text=""
        android:textSize="48sp"
        android:padding="10dp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="@id/item_icon"
        app:layout_constraintRight_toRightOf="@id/item_icon"
        app:layout_constraintTop_toBottomOf="@id/item_icon" />

    <TextView
        android:id="@+id/item_weather_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/calibrib"
        android:text=""
        android:textAlignment="center"
        android:textSize="36sp"
        android:padding="10dp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_temperature" />

    <TextView
        android:id="@+id/item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/calibrib"
        android:text=""
        android:textSize="36sp"
        android:padding="10dp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_weather_description" />

</androidx.constraintlayout.widget.ConstraintLayout>